<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_cloudflare"
        android:layout_marginBottom="32dp"
        android:contentDescription="Cloudflare Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudflare DNS Manager"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入你的 Cloudflare API 令牌"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textColor="?android:attr/textColorSecondary" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="API 令牌">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从以下路径获取你的API令牌：Cloudflare 控制台 → 我的资料 → API令牌"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btn_save_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存 API 令牌"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
